<h1>Napisz wiadomość!</h1>

<% form_for(@post) do |f| %>
<%= f.error_messages %>
<div id="nowa"> 
  <p>
  <strong>Tytuł wiadomości</strong><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <strong>Treść wiadomości</strong><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit 'Napisz wreszcie do reszty' %>
  </p>
<% end %>

<%= link_to 'Back', posts_path %>
</div>
